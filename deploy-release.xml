<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="all" name="Deploy Flashtool">

	<target name="all" depends="clean, core release,E10 Device,E15 Device,U20 Device,LT15 Device,LT18 Device,MK16 Device,MT11 Device,MT15 Device,R800 Device,SK17 Device,ST15 Device,ST17 Device,ST18 Device,WT19 Device,X10 Device,JRE"/>

	<target name="devices" depends="E10 Device,E15 Device,U20 Device,LT15 Device,LT18 Device,MK16 Device,MT11 Device,MT15 Device,R800 Device,SK17 Device,ST15 Device,ST17 Device,ST18 Device,WT19 Device,X10 Device"/>

	<target name="JRE" depends="32bits JRE on 64bits Systems,32bits JRE on 32bits Systems"/>
	
	<target name="dir.check">
	    <condition property="dir.exists">
	      <available file="C:\Program Files (x86)" type="dir"/>
	    </condition>
	</target>
	
    <target name="32bits JRE on 64bits Systems" depends="dir.check" if="dir.exists">
        <delete dir="../Deploy/FlashTool/x10flasher_lib/jre"/>
        <mkdir dir="../Deploy/FlashTool/x10flasher_lib/jre"/>
		<copy todir="../Deploy/FlashTool/x10flasher_lib/jre">
			<fileset dir="C:\Program Files (x86)\java\jre6"/>
		</copy>
    </target>

    <target name="32bits JRE on 32bits Systems" depends="dir.check" unless="dir.exists">
        <delete dir="../Deploy/FlashTool/x10flasher_lib/jre"/>
        <mkdir dir="../Deploy/FlashTool/x10flasher_lib/jre"/>
		<copy todir="../Deploy/FlashTool/x10flasher_lib/jre">
			<fileset dir="C:\Program Files\java\jre6"/>
		</copy>
    </target>

	<target name="clean">
    	<mkdir dir="../Deploy"/>
    	<delete dir="../Deploy/FlashTool"/>
	</target>

	<target name="ressources">
        <jar destfile="../Deploy/FlashTool/x10flasher_lib/x10flasher-res.jar">
            <fileset dir="./bin" includes="/gui/ressources/icons/**"/>
        </jar>
    </target>
	
	<target name="main_lib" depends="ressources">
        <tstamp>
             <format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss" />
        </tstamp>
        <jar destfile="../Deploy/FlashTool/x10flasher.jar">
            <manifest>
                <attribute name="Main-Class" value="gui.FlasherGUI"/>
                <attribute name="Class-Path" value=". x10flasher_lib/foxtrot-core-3.0.jar x10flasher_lib/log4j-1.2.16.jar x10flasher_lib/AXMLPrinter2.jar x10flasher_lib/jna.jar x10flasher_lib/platform.jar x10flasher_lib/jdom-1.1.1.jar x10flasher_lib/commons-io-2.0.1.jar x10flasher_lib/rsyntaxtextarea.jar x10flasher_lib/forms-1.4.2.jar x10flasher_lib/win32-amd64.jar x10flasher_lib/win32-x86.jar x10flasher_lib/jgoodies-common-1.2.1.jar x10flasher_lib/com.sonyericsson.cs_ma3_common_2.10.9.13.jar x10flasher_lib/libusb.jar x10flasher_lib/jgoodies-looks-2.4.2.jar x10flasher_lib/x10flasher-res.jar"/>
                <attribute name="Implementation-Version" value="Version 0.6.5 built on ${TODAY}"/>
            </manifest>
        	<fileset dir="./bin" excludes="/gui/ressources/icons/**"/>
        </jar>
        <jar destfile="../Deploy/FlashTool/x10flasher_lib/x10flasher-res.jar">
            <fileset dir="./bin" includes="/gui/ressources/icons/**"/>
        </jar>
	</target>
	
	<target name="core release" depends="clean, main_lib">
    	<mkdir dir="../Deploy"/>
    	<delete dir="../Deploy/FlashTool"/>
        <mkdir dir ="../Deploy/FlashTool"/>
        <mkdir dir ="../Deploy/FlashTool/custom/"/>
        <mkdir dir ="../Deploy/FlashTool/custom/apps_saved"/>
        <mkdir dir ="../Deploy/FlashTool/custom/root"/>
        <mkdir dir ="../Deploy/FlashTool/custom/shells"/>
        <mkdir dir ="../Deploy/FlashTool/custom/apps"/>
        <mkdir dir ="../Deploy/FlashTool/custom/clean"/>
    	<mkdir dir ="../Deploy/FlashTool/custom/features"/>
    	<mkdir dir="../Deploy/FlashTool/firmwares"/>
        <mkdir dir ="../Deploy/FlashTool/custom/clean"/>
        <mkdir dir="../Deploy/FlashTool/x10flasher_lib"/>
        <mkdir dir="../Deploy/FlashTool/x10flasher_lib/langs"/>
        <mkdir dir="../Deploy/FlashTool/drivers"/>
    	<copy todir="../Deploy/FlashTool/custom/shells">
    		<fileset dir="./shells"
				excludes="**/.svn"/>
    	</copy>
    	<copy todir="../Deploy/FlashTool/x10flasher_lib/langs">
    		<fileset dir="./src/org/lang/ressources"
				excludes="**/.svn"/>
    	</copy>
    	<copy file="./src/org/adb/config/x10list.properties" todir="../Deploy/FlashTool/custom/clean"/>
    	<copy file="./src/org/adb/config/customlist.properties" todir="../Deploy/FlashTool/custom/clean"/>
    	<copy file="./romupdates/psneuter.tar" todir="../Deploy/FlashTool/custom/root"/>
    	<copy file="./romupdates/zergrush.tar" todir="../Deploy/FlashTool/custom/root"/>
    	<copy file="./src/flashsystem/ressources/bundletranslate.properties" todir="../Deploy/FlashTool/x10flasher_lib"/>
        <copy file="./ProgramExe/FlashTool.exe" todir="../Deploy/FlashTool"/>
        <copy file="./linux/FlashTool" todir="../Deploy/FlashTool"/>
		<copy file="./linux/FlashToolConsole" todir="../Deploy/FlashTool"/>
    	<chmod file="../Deploy/FlashTool/XperiaFlashTool" perm="755"/>
        <copy file="./linux/adb" todir="../Deploy/FlashTool/x10flasher_lib"/>
		<copy file="./linux/fastboot" todir="../Deploy/FlashTool/x10flasher_lib"/>
    	<copy todir="../Deploy/FlashTool/x10flasher_lib">
    		<fileset dir="./libs"
				excludes="**/.svn"/>
    	</copy>
    	<copy todir="../Deploy/FlashTool/x10flasher_lib">
    		<fileset dir="./win32"/>
    	</copy>
        <copy todir="../Deploy/FlashTool/x10flasher_lib">
        	<fileset dir="./win32"
    			excludes="**/.svn"/>
        </copy>
        <copy todir="../Deploy/FlashTool/drivers">
        	<fileset dir="./drivers"
    			excludes="**/.svn"/>
        </copy>
    </target>

